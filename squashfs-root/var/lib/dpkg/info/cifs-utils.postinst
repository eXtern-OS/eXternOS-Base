#!/bin/sh

set -e

if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
    update-alternatives --install /etc/cifs-utils/idmap-plugin idmap-plugin /usr/lib/x86_64-linux-gnu/cifs-utils/idmapwb.so 40 \
      --slave /usr/share/man/man8/idmap-plugin.8.gz idmap-plugin.8.gz \
      /usr/share/man/man8/idmapwb.8.gz
fi


